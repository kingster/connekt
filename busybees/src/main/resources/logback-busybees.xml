<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="WORKERS" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Workers.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="CLIENTS" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Clients.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="PROCESSORS" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Processors.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FACTORY" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Factory.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DAO" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Dao.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SERVICE" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/connekt/logs/busybees/Service.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="SERVICE" level="DEBUG">
        <appender-ref ref="SERVICE" />
    </logger>
    <logger name="DAO" level="DEBUG">
        <appender-ref ref="DAO" />
    </logger>
    <logger name="FACTORY" level="DEBUG">
        <appender-ref ref="FACTORY" />
    </logger>
    <logger name="WORKERS" level="DEBUG">
        <appender-ref ref="WORKERS" />
    </logger>
    <logger name="CLIENTS" level="DEBUG">
        <appender-ref ref="CLIENTS" />
    </logger>
    <logger name="PROCESSORS" level="DEBUG">
        <appender-ref ref="PROCESSORS" />
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>