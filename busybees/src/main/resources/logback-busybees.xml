<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FACTORY" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/busybees-factory.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DAO" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/busybees-dao.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SERVICE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/busybees-service.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="SERVICE" level="DEBUG">
        <appender-ref ref="SERVICE" />
    </logger>
    <logger name="DAO" level="DEBUG">
        <appender-ref ref="DAO" />
    </logger>
    <logger name="FACTORY" level="DEBUG">
        <appender-ref ref="FACTORY" />
    </logger>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>