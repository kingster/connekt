<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="log4j2Receptors">
  <Properties>
    <Property name="defaultLog">/var/log/flipkart/pf/fk-pf-connekt/receptors-default.log</Property>
    <Property name="accessLog">/var/log/flipkart/pf/fk-pf-connekt/receptors-access.log</Property>
    <Property name="factoryLog">/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log</Property>
    <Property name="daoLog">/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log</Property>
    <Property name="serviceLog">/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log</Property>
  </Properties>

  <Appenders>
    <RollingRandomAccessFile name="ACCESS" fileName="${accessLog}" filePattern="${accessLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="DEFAULT" fileName="${defaultLog}" filePattern="${defaultLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="PROCESSORS" fileName="${processorLog}" filePattern="${processorLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="FACTORY" fileName="${factoryLog}" filePattern="${factoryLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="DAO" fileName="${daoLog}" filePattern="${daoLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="SERVICE" fileName="${serviceLog}" filePattern="${serviceLog}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>
  </Appenders>

  <!-- Receptors loggers -->
  <Loggers>
    <Logger name="DEFAULT" level="trace" additivity="false">
      <AppenderRef ref="DEFAULT"/>
    </Logger>
    <Logger name="ACCESS" level="debug" additivity="false">
      <AppenderRef ref="ACCESS"/>
    </Logger>
    <Logger name="FACTORY" level="debug" additivity="false">
      <AppenderRef ref="FACTORY"/>
    </Logger>
    <Logger name="DAO" level="debug" additivity="false">
      <AppenderRef ref="DAO"/>
    </Logger>
    <Logger name="SERVICE" level="debug" additivity="false">
      <AppenderRef ref="SERVICE"/>
    </Logger>

    <!-- Used Library loggers -->
    <Logger name="kafka" level="error" />
    <Logger name="org.apache" level="error" />
    <Logger name="com.couchbase.client" level="error" />

    <Logger name="com.flipkart" level="debug"  />
    <Logger name="com.flipkart.kloud.config" level="error"/>

    <Root level="info">
      <AppenderRef ref="DEFAULT"/>
    </Root>
  </Loggers>

</Configuration>
