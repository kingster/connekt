<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="log4j2Receptors">
  <Properties>
    <Property name="defaultLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-default.log</Property>
    <Property name="accessLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-access.log</Property>
    <Property name="factoryLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log</Property>
    <Property name="daoLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log</Property>
    <Property name="processorLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-processor.log</Property>
    <Property name="serviceLogFile">/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log</Property>
  </Properties>

  <Appenders>

    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %highlight{%p} [%t] %m%n"/>
    </Console>

    <RollingRandomAccessFile name="ACCESS" fileName="${accessLogFile}" filePattern="${accessLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

    <RollingRandomAccessFile name="DEFAULT" fileName="${defaultLogFile}" filePattern="${defaultLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

    <RollingRandomAccessFile name="PROCESSORS" fileName="${processorLogFile}" filePattern="${processorLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

    <RollingRandomAccessFile name="FACTORY" fileName="${factoryLogFile}" filePattern="${factoryLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

    <RollingRandomAccessFile name="DAO" fileName="${daoLogFile}" filePattern="${daoLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

    <RollingRandomAccessFile name="SERVICE" fileName="${serviceLogFile}" filePattern="${serviceLogFile}.%i" immediateFlush="false" bufferSize="1048576">
      <PatternLayout>
        <Pattern>%n%d %highlight{%p} %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="4"/>
    </RollingRandomAccessFile>

  </Appenders>

  <!-- Receptors loggers -->
  <Loggers>
    <Logger name="DEFAULT" level="trace" additivity="false">
      <AppenderRef ref="DEFAULT"/>
    </Logger>
    <Logger name="ACCESS" level="debug" additivity="false">
      <AppenderRef ref="ACCESS"/>
    </Logger>
    <Logger name="FACTORY" level="debug" additivity="false">
      <AppenderRef ref="FACTORY"/>
    </Logger>
    <Logger name="DAO" level="debug" additivity="false">
      <AppenderRef ref="DAO"/>
    </Logger>
    <Logger name="SERVICE" level="debug" additivity="false">
      <AppenderRef ref="SERVICE"/>
    </Logger>

    <!-- Used Library loggers -->
    <Logger name="kafka" level="error" />
    <Logger name="org.apache" level="error" />
    <Logger name="com.couchbase.client" level="error" />

    <Logger name="com.flipkart" level="debug"  />
    <Logger name="com.flipkart.kloud.config" level="error"/>

    <Root level="INFO">
      <AppenderRef ref="DEFAULT"/>
    </Root>
  </Loggers>

</Configuration>
