<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%n%date [%thread] %highlight(%-5level) %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FACTORY" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log</file>
    <encoder>
      <pattern>%n%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>100MB</maxFileSize>
    </triggeringPolicy>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log.%i</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>5</maxIndex>
    </rollingPolicy>
  </appender>

  <appender name="DAO" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log</file>
    <encoder>
      <pattern>%n%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>100MB</maxFileSize>
    </triggeringPolicy>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log.%i</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>5</maxIndex>
    </rollingPolicy>
  </appender>

  <appender name="SERVICE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log</file>
    <encoder>
      <pattern>%n%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>100MB</maxFileSize>
    </triggeringPolicy>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log.%i</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>5</maxIndex>
    </rollingPolicy>
  </appender>

  <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-access.log</file>
    <encoder>
      <pattern>%date %level [%thread] %msg%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>false</immediateFlush>
    </encoder>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>100MB</maxFileSize>
    </triggeringPolicy>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-access.log.%i</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>5</maxIndex>
    </rollingPolicy>
  </appender>

  <appender name="ASYNC_FACTORY" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FACTORY" />
  </appender>
  <appender name="ASYNC_DAO" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="DAO" />
  </appender>
  <appender name="ASYNC_SERVICE" class="ch.qos.logback.classic.AsyncAppender" queueSize="512">
    <appender-ref ref="SERVICE" />
  </appender>
  <appender name="ASYNC_ACCESS" class="ch.qos.logback.classic.AsyncAppender" queueSize="1024">
    <appender-ref ref="ACCESS" />
  </appender>

  <logger name="SERVICE" additivity="false">
    <appender-ref ref="SERVICE" />
  </logger>
  <logger name="DAO" additivity="false">
    <appender-ref ref="DAO" />
  </logger>
  <logger name="FACTORY" additivity="false">
    <appender-ref ref="FACTORY" />
  </logger>
  <logger name="ACCESS" additivity="false">
    <appender-ref ref="ACCESS" />
  </logger>

  <logger name="kafka" level="ERROR" />
  <logger name="org.apache" level="ERROR" />
  <logger name="com.couchbase.client" level="ERROR" />

  <logger name="com.flipkart" level="ALL"  />
  <logger name="com.flipkart.kloud.config" level="ERROR"/>

  <root level="ALL" additivity="false">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
