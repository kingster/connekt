<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36} - %msg%n%xException%nopex%n</pattern>
        </encoder>
    </appender>

    <appender name="FACTORY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log</file>
        <encoder>
            <pattern>%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n%xException%nopex%n</pattern>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-factory.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
    </appender>

    <appender name="DAO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log</file>
        <encoder>
            <pattern>%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n%xException%nopex%n</pattern>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-dao.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
    </appender>

    <appender name="SERVICE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log</file>
        <encoder>
            <pattern>%date %highlight(%level) [%thread] %logger{10} [%file:%line] %msg%n%xException%nopex%n</pattern>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-service.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
    </appender>

    <appender name="AKKA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/flipkart/pf/fk-pf-connekt/receptors-akka.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} %msg%n%xException%nopex%n</pattern>
            <!-- this quadruples logging throughput -->
            <immediateFlush>false</immediateFlush>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/flipkart/pf/fk-pf-connekt/receptors-akka.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
    </appender>

    <logger name="SERVICE" additivity="false">
        <appender-ref ref="SERVICE" />
    </logger>
    <logger name="DAO" additivity="false">
        <appender-ref ref="DAO" />
    </logger>
    <logger name="FACTORY" additivity="false">
        <appender-ref ref="FACTORY" />
    </logger>

    <!-- additivity=false ensures access log data only goes to the access log -->
    <logger name="akka.actor.ActorSystemImpl" level="DEBUG" additivity="false">
        <appender-ref ref="AKKA" />
    </logger>


    <logger name="kafka" level="ERROR" />
    <logger name="org.apache" level="ERROR" />
    <logger name="com.couchbase.client" level="ERROR" />

    <logger name="com.flipkart" level="ALL"  />
    <logger name="com.flipkart.kloud.config" level="ERROR"/>


    <root level="ALL" additivity="false">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>